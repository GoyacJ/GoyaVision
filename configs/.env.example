# 应用环境
GOYAVISION_ENV=dev

# 服务器
GOYAVISION_SERVER_PORT=8080

# 数据库
GOYAVISION_DB_DSN=host=localhost user=goyavision password=goyavision dbname=goyavision port=5432 sslmode=disable

# FFmpeg
GOYAVISION_FFMPEG_BIN=ffmpeg

# 预览
GOYAVISION_PREVIEW_MEDIAMTX_BIN=mediamtx

# 存储
GOYAVISION_RECORD_BASE_PATH=./data/recordings

# AI
GOYAVISION_AI_TIMEOUT=10s
GOYAVISION_AI_RETRY=2

# JWT
GOYAVISION_JWT_SECRET=replace-with-secure-secret
GOYAVISION_JWT_EXPIRE=2h
GOYAVISION_JWT_REFRESH_EXP=168h
GOYAVISION_JWT_ISSUER=goyavision

# MediaMTX
GOYAVISION_MEDIAMTX_API_ADDRESS=http://localhost:9997
GOYAVISION_MEDIAMTX_RTSP_ADDRESS=rtsp://localhost:8554
GOYAVISION_MEDIAMTX_RTMP_ADDRESS=rtmp://localhost:1935
GOYAVISION_MEDIAMTX_HLS_ADDRESS=http://localhost:8888
GOYAVISION_MEDIAMTX_WEBRTC_ADDRESS=http://localhost:8889
GOYAVISION_MEDIAMTX_PLAYBACK_ADDRESS=http://localhost:9996
GOYAVISION_MEDIAMTX_RECORD_PATH=./data/recordings/%path/%Y-%m-%d_%H-%M-%S
GOYAVISION_MEDIAMTX_RECORD_FORMAT=fmp4
GOYAVISION_MEDIAMTX_SEGMENT_DURATION=1h

# MinIO
GOYAVISION_MINIO_ENDPOINT=localhost:9000
GOYAVISION_MINIO_ACCESS_KEY=minioadmin
GOYAVISION_MINIO_SECRET_KEY=minioadmin
GOYAVISION_MINIO_BUCKET_NAME=goyavision
GOYAVISION_MINIO_USE_SSL=false